# ArtVpp Backend Configuration

# Server Port
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=artvpp_books

# JWT Configuration (for future authentication)
JWT_SECRET=your_jwt_secret_key_here

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# E-commerce Integration
ECOMMERCE_API_URL=http://localhost:5176
SYNC_PAYMENTS=true
AUTO_CREATE_INVOICES=true

# Features
ENABLE_GST_CALCULATION=true
ENABLE_TAX_REPORTS=true
BUSINESS_TYPE=service

# Email Configuration (for invoices)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
INVOICE_EMAIL_FROM=noreply@artvpp.com

# Export Configuration
EXPORT_FORMATS=pdf,excel,csv
